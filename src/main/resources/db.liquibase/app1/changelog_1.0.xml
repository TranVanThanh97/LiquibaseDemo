<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">
    <changeSet  id="demo1_file1"  author="sa" runOnChange="true" context="demo1" labels="demo1">
        <createTable tableName="address">
            <column  name="id"  type="int">
                <constraints  primaryKey="true"  nullable="false"/>
            </column>
            <column  name="name"  type="varchar(50)">
                <constraints  nullable="false"/>
            </column>
            <column  name="active"  type="boolean"  defaultValueBoolean="true"/>
            <column name="class" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="company">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)"></column>
        </createTable>
        <rollback>
            <dropTable tableName="address"></dropTable>
        </rollback>
    </changeSet>
    <changeSet id="tag_demo1_file1" author="sa">
        <tagDatabase tag="demo1_ver1"/>
    </changeSet>
</databaseChangeLog>